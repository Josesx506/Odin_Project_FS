generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SocialSession {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}

model SocialUser {
  id        Int     @id @default(autoincrement())
  username  String
  email     String  @unique
  password  String?
  bio       String?
  gravatar  String?
  token     String?
  githubotp String?
}
