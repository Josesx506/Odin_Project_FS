<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header', { title: title }) %>
<link rel="stylesheet" href="/css/auth.css">
<body>
    <%- include('../partials/nav') %>
    <%- include("../partials/alerts.ejs") %>
    <div class="container formHolder">
        <div class="formTitle">
            <h3>Account Type</h3>
        </div>
        <%- include("../partials/errors.ejs") %>
        <form class="authForm" action="<%= `${locals.baseUrl}/admin` %>" method="POST">
            <div class="adminRow">
                <div class="adminInput">
                    <input id="basic" value="basic" name="status" type="radio" <%= !(locals.user.admin)  ? 'checked' : '' %>>
                    <label for="basic">Basic</label>
                </div>
                <div class="adminInput">
                    <input id="admin" value="admin" name="status" type="radio"  <%= locals.user.admin  ? 'checked' : '' %>>
                    <label for="admin">Admin</label>
                </div>
            </div>
            <div class="submitBtn">
                <button>Update</button>
            </div>
        </form>
    </div>
</body>

</html>