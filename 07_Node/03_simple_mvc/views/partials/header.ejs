<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <title> <%= locals.title.replace("/","").replace(/^./, char => char.toUpperCase()) + " Page" %> </title>
    <header class="p-3 bg-dark text-white mb-4">
      <nav class="container">
          <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
              <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <% for (let i = 0; i < links.length; i++) { %>
                  <% let prefix = locals.title + "/" + (links[i].href !== "/" ? links[i].href : ""); %> 
                  <li>
                    <a href="<%= prefix %>" class="nav-link px-2 text-white link-hover">
                      <span> <%= links[i].text %> </span>
                    </a>
                  </li>
                <% } %>
              </ul>
              <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                  <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
              </form>
              <div class="text-end">
                  <button type="button" class="btn btn-outline-light me-2">Login</button>
                  <button type="button" class="btn btn-warning">Sign-up</button>
              </div>
          </div>
      </nav>
    </header>
</head>