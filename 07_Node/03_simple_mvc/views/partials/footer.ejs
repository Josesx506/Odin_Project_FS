<div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
        <p class="col-md-4 mb-0 text-muted">&copy; 2025 Simple Blog</p>
        <ul class="nav col-md-4 justify-content-end">
            <% for (let i = 0; i < links.length; i++) { %>
              <% let prefix = locals.title + "/" + (links[i].href !== "/" ? links[i].href : ""); %> 
              <li class="nav-item link-hover">
                <a href="<%= prefix %>" class="nav-link px-2">
                  <span> <%= links[i].text %> </span>
                </a>
              </li>
            <% } %>
        </ul>
    </footer>
</div>